	<input type="submit" class="btn btn-info btn-lg" style="width:300px; height:40"  value="Eliminar POI"> 
</form>

<form action="/agregarPOI" method="get" >
<input type="submit" class="btn btn-info btn-lg" style="width:300px; height:40" value="Nuevo">
</form>
