{{# partial "titulo" }}	
	<title>POIs - Agregar POI</title>
{{/partial}}
		
{{# partial "contenido" }}	

<form action="/crearPOI" method="get">

  <div class="row">
	<div class="panel panel-success">
		<div class="panel-heading">
		    <h3 class="panel-title">Datos POI</h3>
		 </div>
		<div class="panel-body">
		    <div class="col-xs-12">
				<td>Nombre</td>
				<input type="text" class="form-control" id="nombre" name="nombre">
				<td>Direccion</td>
				<input type="text" class="form-control" id="direccion" name="direccion">		
				<td>Coordenada X</td>
				<input type="text" class="form-control" id="coordenada_x" name="coordenada_x">
				<td>Coordenada Y</td>
				<input type="text" class="form-control" id="coordenada_y" name="coordenada_y">	
		  		<td>Tipo POI</td>
				<input type="text" class="form-control" id="tipo" name="tipo">
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<input type="submit" class="btn btn-success" value="Agregar POI">
 	 </div>
</form>

{{/partial}}
				
{{> layoutSesion.hbs }}