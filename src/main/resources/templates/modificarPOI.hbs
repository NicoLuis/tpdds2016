{{# partial "titulo" }}	
	<title>POIs - Modificar POI</title>
{{/partial}}
		
{{# partial "contenido" }}	
<script type="text/javascript"> 
		var parameters = location.search.substring(1).split("&");
		var temp = parameters[0].split("=");
		var nombre = unescape(temp[1]);
	    document.getElementById("nombre").innerHTML = nombre;
</script>

<form action="/actualizarPOI" method="get">
  <div class="row">
	<div class="panel panel-info">
		<div class="panel-heading">
		    <h3 class="panel-title">Datos POI</h3>
		 </div>
		<div class="panel-body">
		    <div class="col-xs-12">
				<td>Nombre</td>
				<input type="text"  class="form-control" id="nombre" name="nombre">
				<td>Direccion</td>
				<input type="text"  class="form-control" name="direccion">		
				<td>Coordenada X</td>
				<input type="text"  class="form-control" name="coordenada_x">
				<td>Coordenada Y</td>
				<input type="text"  class="form-control" name="coordenada_y">	
		  		<td>Tipo POI</td>
				<input type="text" class="form-control" name="tipo">
			</div>
		</div>
	</div>
	<div class="col-md-5">
		<input type="submit" class="btn btn-primary" value="Modificar POI">
	</div>
  </div>
</form>
{{/partial}}
				
{{> layoutSesion.hbs }}