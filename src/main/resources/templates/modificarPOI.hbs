{{# partial "titulo" }}	
	<title>POIs - Modificar POI</title>
{{/partial}}
		
{{# partial "contenido" }}	

<script>
function tomar_datos(){
	var parameters = location.search.substring(1).split("&");
	
	var temp = parameters[0].split("=");
	var parametro = unescape(temp[1]);
	document.getElementById("nombreAMostrar").value = parametro;
	document.getElementById("nombre").value = parametro;
	
	var temp = parameters[1].split("=");
	var parametro = unescape(temp[1]);
	document.getElementById("direccion").value = parametro;
	
	var temp = parameters[2].split("=");
	var parametro = unescape(temp[1]);
	document.getElementById("coordenada_x").value = parametro;
	
	var temp = parameters[3].split("=");
	var parametro = unescape(temp[1]);
	document.getElementById("coordenada_y").value = parametro;
	
	var temp = parameters[4].split("=");
	var parametro = unescape(temp[1]);
	document.getElementById("tipoAMostrar").value = parametro;
	document.getElementById("tipo").value = parametro;
	
}
</script>

<form action="/actualizarPOI" method="get">

  <div class="row">
	<div class="panel panel-info">
		<div class="panel-heading">
		    <h3 class="panel-title">Datos POI</h3>
		 </div>
		<div class="panel-body">
		    <div class="col-xs-12">
				<td>Nombre</td>
				<input type="text" class="form-control" id="nombreAMostrar" name="nombreAMostrar"disabled>
				<input type="hidden" class="form-control" id="nombre" name="nombre">
				<td>Direccion</td>
				<input type="text" class="form-control" id="direccion" name="direccion">		
				<td>Coordenada X</td>
				<input type="text" class="form-control" id="coordenada_x" name="coordenada_x">
				<td>Coordenada Y</td>
				<input type="text" class="form-control" id="coordenada_y" name="coordenada_y">	
		  		<td>Tipo POI</td>
		  		<input type="text" class="form-control" id="tipoAMostrar" name="tipoAMostrar" disabled>
				<input type="hidden" class="form-control" id="tipo" name="tipo">
			</div>
		</div>
	</div>
	<div class="col-md-5">
		<input type="submit" class="btn btn-primary" value="Modificar POI">
	</div>
  </div>
</form>

<script>tomar_datos()</script>

