<script>					
function genera_botones() {
  var parameters = location.search.substring(1).split("&");
  var body = document.getElementsByTagName("body")[0];
  
  var temp = parameters[0].split("=");
  var cantidadFilas = unescape(temp[1]);
  
  var numeroParametro = 0;
 
  for (var i = 0; i < cantidadFilas; i++) {
	    numeroParametro++;
		var temp = parameters[numeroParametro].split("=");
		var parametro = unescape(temp[1]);
		var button = document.createElement("input");
		button.setAttribute("type", "submit");
		button.setAttribute("class", "buttonsdds button1");
		button.value = parametro;
		button.style.marginLeft="10%";
 		button.style.maxWidth="80%";
  		button.style.alignContent="center";
		numeroParametro++;

		var temp = parameters[numeroParametro].split("=");
		var parametro = unescape(temp[1]);
		var form = document.createElement("form");
		var action = "/" + parametro;
		form.setAttribute("action", action);
		form.setAttribute("method", "get");

		form.appendChild(button);
		body.appendChild(form);
  }
  
}
</script>

